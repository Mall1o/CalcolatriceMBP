<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFAAAA">

                <TextView
                    android:id="@+id/display"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="right"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/Clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"/>
                <Button
                    android:id="@+id/MemoryClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CM"/>
                <Button
                    android:id="@+id/MemorySave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MS"/>
                <Button
                    android:id="@+id/MemoryRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MR"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"/>
                <Button
                    android:onClick="ClickOp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"/>
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"/>
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"/>
                <Button
                    android:onClick="ClickOp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"/>
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"/>
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"/>
                <Button
                    android:onClick="ClickOp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="ClickDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."/>
                <Button
                    android:onClick="ClickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <Button
                    android:onClick="ClickEqual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="/>
                <Button
                    android:onClick="ClickOp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>

            </LinearLayout>
         </LinearLayout>
</RelativeLayout>